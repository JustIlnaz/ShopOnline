<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShopOnline.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ShopOnline.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.png"
        Title="ShopOnline"
		MinWidth="400" MinHeight="400" MaxWidth="400" MaxHeight="400">
	<Grid Background="Black">
	<StackPanel Margin="20" Background="Wheat">
		
		<StackPanel HorizontalAlignment="Center" Margin="5">
	<TextBlock Text="Вход в интернет-магазин" FontWeight="Bold" FontSize="25" />
		</StackPanel>

		<StackPanel Margin="15">
			<TextBlock Text="Логин:"/>
			<TextBox  x:Name="LoginTB"  />
		</StackPanel>

		<StackPanel Margin="15">
			<TextBlock Text="Пароль:"/>
			<TextBox  x:Name="PasswordTextBox" PasswordChar="*"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
			<Button Content="Войти" Margin="10" FontSize="20" Click="Button_Click_1"/>
			<Button Content="Регистрация" Margin="10" FontSize="20" Click="Button_Click"/>
			
		</StackPanel>
		<TextBlock x:Name="ErrorTextBlock" Foreground="Red"
					  HorizontalAlignment="Center" Margin="10"
					  TextWrapping="Wrap" FontWeight="Bold"
					  Text=""/>
	</StackPanel>
	</Grid>
</Window>
