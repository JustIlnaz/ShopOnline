<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopOnline.AdminWindow"
        Title="AdminWindow">
	<Grid Background="Black">
		<StackPanel Background="Wheat" Margin="20">
			<StackPanel VerticalAlignment="Top" Margin="5" Spacing="5" Orientation="Horizontal"  HorizontalAlignment="Center">
				<ContentControl x:Name="AdminEmployee">
					<Button Content="Управление сотрудниками"  Click="NavigateToEmployeeManagement"/>
				</ContentControl>
				<Button Content="Управление покупателями"/>
				
				<ContentControl x:Name="AdminGoods">
				<Button Content="Управление товарами" Click="NavigateToGoods"/>
				</ContentControl>

				<ContentControl x:Name="AdminPurchases">
					<Button Content="Покупки" Click="NavigateToPurchases"/>
				</ContentControl>


				<ContentControl x:Name="AdminProfile">
					<Button Content="Профиль" Click ="NavigateToAdminProfile"/>
				</ContentControl>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
