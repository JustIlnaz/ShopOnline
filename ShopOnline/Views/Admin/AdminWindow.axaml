<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopOnline.AdminWindow"
        Title="Панель администратора"
		WindowStartupLocation="CenterScreen">

	<Grid Background="Black">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Menu Bar -->
		<Menu Grid.Row="0" Background="Wheat">
			<MenuItem Header="Профиль" Click="Profile_Click"/>
			<MenuItem Header="Товары" Click="Goods_Click"/>
			<MenuItem Header="Заказы" Click="Purchases_Click"/>
			<MenuItem Header="Управление покупателями" Click="CustomerManagment_Click"/>
			<MenuItem Header="Управление сотрудниками" Click="EmployeeManagment_Click"/>
			<MenuItem Header="Выйти" Click="LogoutClick"/>
		</Menu>

		<!-- Content Area -->
		<ContentControl Grid.Row="1" Name="ContentArea"/>
	</Grid>

</Window>