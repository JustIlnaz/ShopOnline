<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShopOnline.AdminProfileUserControl">

    <Grid Background="Wheat" ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" Margin="20">
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Full Name" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True"/>

            <TextBlock Text="Phone Number" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneNumberTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True"/>

            <TextBlock Text="Description" Margin="0,10,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True"/>

            <TextBlock Text="Email" Margin="0,10,0,5"/>
            <TextBox x:Name="EmailTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Login:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <TextBox x:Name="PasswordTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True" PasswordChar="*"/>

            <TextBlock Text="Role:" Margin="0,10,0,5"/>
            <TextBox x:Name="RoleTextBox" Width="200" Height="30" IsEnabled="False" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</UserControl>