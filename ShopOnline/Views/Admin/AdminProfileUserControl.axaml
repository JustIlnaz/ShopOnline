<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShopOnline.AdminProfileUserControl">

    <Grid Background="Wheat" ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" Margin="20">
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Full Name" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Text="{Binding User.FullName, Mode=TwoWay}"/>

            <TextBlock Text="Phone Number" Margin="0,10,0,5"/>
            <TextBox Width="200" Height="30" Text="{Binding User.PhoneNumber, Mode=TwoWay}"/>

            <TextBlock Text="Description" Margin="0,10,0,5"/>
            <TextBox Width="200" Height="30" Text="{Binding User.Description, Mode=TwoWay}"/>

            <TextBlock Text="Email" Margin="0,10,0,5"/>
            <TextBox Width="200" Height="30" Text="{Binding User.Email, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Login:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Text="{Binding Login1, Mode=TwoWay}"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <TextBox Width="200" Height="30" PasswordChar="*" Text="{Binding Password, Mode=TwoWay}"/>

            <TextBlock Text="Role:" Margin="0,10,0,5"/>
            <TextBox Width="200" Height="30" IsReadOnly="True" Text="{Binding User.Role.NameRole}"/>
        </StackPanel>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,10,0,0">
            <Button Content="Сохранить" Width="120" Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</UserControl>