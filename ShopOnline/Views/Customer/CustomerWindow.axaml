<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopOnline.Views.Customer.CustomerWindow"
        Title="Панель покупателя"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="Wheat">
            <MenuItem Header="Товары" Click="Goods_Click"/>
            <MenuItem Header="Корзина" Click="Basket_Click"/>
            <MenuItem Header="Заказы" Click="Orders_Click"/>
            <MenuItem Header="Выйти" Click="LogoutClick"/>
            <MenuItem Header="Профиль" Click="ProfileClick"/>
        </Menu>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Name="ContentArea"/>
    </Grid>
</Window>
