<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShopOnline.Views.Customer.CustomerGoodsUserControl">
    <Grid RowDefinitions="Auto,Auto,*" Margin="10">
        <!-- Search and Filter Row -->
        <Grid Background="wheat" Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <TextBlock VerticalAlignment="Center" Text="Категория:"/>
                <ComboBox Name="CategoryComboBox" Width="200" 
                         SelectionChanged="OnCategoryChanged"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="Поиск:"/>
                <TextBox Name="SearchTextBox" Width="200" 
                        TextChanged="OnSearchChanged" 
                        Watermark="Введите название товара..."/>
            </StackPanel>

            <StackPanel  Grid.Column="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Text="Сортировка:"/>
                <ComboBox Name="SortComboBox" Width="150" SelectionChanged="OnSortChanged">
                    <ComboBoxItem Content="Название А-Я"/>
                    <ComboBoxItem Content="Название Я-А"/>
                    <ComboBoxItem Content="Цена (по возрастанию)"/>
                    <ComboBoxItem Content="Цена (по убыванию)"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Action Buttons Row -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Добавить в корзину" Click="AddToBasket" 
                        Background="LightBlue" Padding="10,5"/>
                <Button Content="Очистить фильтры" Click="ClearFilters" 
                        Background="LightGray" Padding="10,5"/>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="2" Name="ProductsDataGrid" 
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  Background="wheat"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding NameProducts}" Width="200"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding CountInSklade}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.NameCategories}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>