<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="ShopOnline.Views.Manager.EditProductWindow"
        Title="Edit tovar"
        Width="400" Height="450">
    <StackPanel Margin="20">
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Name:"/>
            <TextBox Name="NameBox" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Description:"/>
            <TextBox Name="DescriptionBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Price:"/>
            <TextBox Name="PriceBox" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Count:"/>
            <TextBox Name="CountBox" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Category:"/>
            <ComboBox Name="CategoryComboBox" Width="200" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="OnSave" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="OnCancel"/>
        </StackPanel>
    </StackPanel>
</Window>