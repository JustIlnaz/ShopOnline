<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShopOnline.Views.Manager.ManagerGoodsUserControl">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add Product" Click="OnAddProduct" Margin="0,0,10,0"/>
            <TextBox Name="SearchBox" Width="200" Watermark="Search product..." Margin="0,0,10,0"/>
            <Button Content="Search" Click="OnSearch"/>
        </StackPanel>
        
        <DataGrid Name="ProductsGrid" 
                  IsReadOnly="True" 
                  AutoGenerateColumns="False"
                  DoubleTapped="ProductsGrid_DoubleTapped">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProducts}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding NameProducts}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Count" Binding="{Binding CountInSklade}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.NameCategories}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateSave}"/>
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="OnDeleteProduct"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>