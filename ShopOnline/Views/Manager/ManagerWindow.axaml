<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopOnline.ManagerWindow"
        Title="ManagerWindow">
	<Grid Background="Black">
		<StackPanel Background="Wheat" Margin="20">
			<StackPanel VerticalAlignment="Top" Orientation="Horizontal"  HorizontalAlignment="Center">
				<ContentControl Margin="5">
					<Button Content="Управление"/>
				</ContentControl>

				<ContentControl Margin="5">
					<Button Content="Просмотр покупок"/>
				</ContentControl>


				<ContentControl Margin="5">
					<Button Content="Редактирование профиля"/>
				</ContentControl>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
