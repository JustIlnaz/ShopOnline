<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShopOnline.Views.Manager.ManagerProfileUserControl">
    
    <Grid Background="Wheat" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Панель сообщений -->
        <Grid x:Name="ValidationErrors" IsVisible="False" Grid.Row="0">
            <Border Background="#FFEBEE" BorderBrush="#FFB4B4" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <TextBlock x:Name="ValidationMessage" Foreground="#D32F2F"/>
            </Border>
        </Grid>
        
        <!-- Форма профиля -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto">
            <!-- Личная информация -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Full name:" Margin="0,0,0,5"/>
                <TextBox Width="200" Height="30" Text="{Binding User.FullName}"/>

                <TextBlock Text="Email:" Margin="0,10,0,5"/>
                <TextBox Width="200" Height="30" Text="{Binding User.Email}"/>
                
                <TextBlock Text="Phone number:" Margin="0,10,0,5"/>
                <TextBox Width="200" Height="30" Text="{Binding User.PhoneNumber}"/>
                
                <TextBlock Text="Description:" Margin="0,10,0,5"/>
                <TextBox Width="200" Height="60" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         Text="{Binding User.Description}"/>
            </StackPanel>
            
            <!-- Информация аккаунта -->
            <StackPanel Grid.Column="1" Margin="20">
                <TextBlock Text="Login:" Margin="0,0,0,5"/>
                <TextBox Width="200" Height="30" Text="{Binding CurrentLogin.Login1}"/>

                <TextBlock Text="Password:" Margin="0,10,0,5"/>
                <TextBox Width="200" Height="30" 
                         PasswordChar="•" 
                         Text="{Binding CurrentLogin.Password}"/>

                <TextBlock Text="Role:" Margin="0,10,0,5"/>
                <TextBox Width="200" Height="30" 
                         IsReadOnly="True" 
                         Text="{Binding User.Role.NameRole}"/>
            </StackPanel>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="20,20,0,0">
            <Button Content="Save" Width="120" Click="OnSaveClick"/>
            <Button Content="Reset" Width="120" Margin="10,0,0,0" Click="OnResetClick"/>
        </StackPanel>
    </Grid>
</UserControl>